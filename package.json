{
  "name": "@odatano/watch",
  "version": "0.1.0",
  "description": "CAP Plugin for deterministic monitoring of Cardano blockchain events and transactions (via Blockfrost)",
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "postbuild": "cp dist/cds-plugin.js cds-plugin.js || copy dist\\cds-plugin.js cds-plugin.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"**/*.{ts,json,md,cds}\""
  },
  "keywords": [
    "CAP",
    "cds",
    "plugin",
    "cardano",
    "blockchain",
    "watcher",
    "events",
    "blockfrost"
  ],
  "author": "Maximilian Weber <max@maxalexweber.de>",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ODATANO/ODATANO-WATCH.git"
  },
  "homepage": "https://github.com/ODATANO/ODATANO-WATCH#readme",
  "bugs": {
    "url": "https://github.com/ODATANO/ODATANO-WATCH/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "imports": {
    "#cds-models/*": "./@cds-models/*/index.js"
  },
  "cds": {
    "requires": {
      "db": {
        "kind": "sqlite",
        "credentials": {
          "url": "watch.db"
        }
      },
      "watch": true
    }
  },
  "files": [
    "cds-plugin.js",
    "dist/",
    "db/",
    "srv/",
    "README.md",
    "LICENSE"
  ],
  "dependencies": {
    "@blockfrost/blockfrost-js": "^6.1.0",
    "dotenv": "^17.2.3",
    "pino": "^10.2.0",
    "pino-pretty": "^13.1.3",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "@cap-js/cds-test": "^0.4.1",
    "@cap-js/cds-types": "^0.15.0",
    "@cap-js/sqlite": "^2.1.2",
    "@sap/cds": "^9.6.3",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.17.5",
    "@typescript-eslint/eslint-plugin": "^8.53.0",
    "@typescript-eslint/parser": "^8.53.0",
    "axios": "^1.13.2",
    "chai": "^4.5.0",
    "chai-as-promised": "^7.1.2",
    "chai-subset": "^1.6.0",
    "eslint": "^9.39.2",
    "jest": "^30.2.0",
    "prettier": "^3.8.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  },
  "peerDependencies": {
    "@sap/cds": ">=9.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
